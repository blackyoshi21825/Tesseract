{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build tesser",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-std=c99",
                "-Wall",
                "-Wextra",
                "-Iinclude",
                "-o",
                "tesser",
                "src/lexer.c",
                "src/parser.c",
                "src/ast.c",
                "src/token.c",
                "src/interpreter.c",
                "src/variables.c",
                "src/main.c",
                "-lm"
            ],
            "group": "build"
        },
        {
            "label": "run tesser",
            "type": "shell",
            "command": "tesseract",
            "args": [
                "sample_file.tesser"
            ],
            "windows": {
                "command": ".\\tesser.exe"
            },
            "osx": {
                "command": "./tesser"
            },
            "linux": {
                "command": "./tesser"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
